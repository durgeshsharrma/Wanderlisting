<% layout("/layouts/Boilerplate.ejs") %>


<div class="row">
    
    <div class="col-8 offset-2">
        <h1>Edit Listing</h1>

         
           <form method="post" action="/home/<%= listing._id %>?_method=PUT" novalidate class="needs-validation">
            <div class="mt-2">
                <label for="title" class="form-label">Title</label>
                <input id="title" name="listing[title]" value="<%= listing.title %>" type="text" class="form-control" required>
                
               </div>
    
               <div class="mt-2">
                <label for="description" class="form-label">Description</label>
                <input id="description" name="listing[description]"  value="<%= listing.description %>"  type="text"  class="form-control" required>
                <div class="valid-feedback">
                    Looks good!
                  </div>
               </div>
               <div class="mt-2">
                <label for="image" class="form-label">Image Url</label>
                <input id="image" name="listing[image]" placeholder="url" value="<%= listing.image %>" type="text" class="form-control" required>
               </div>
    
    
               <div class="row mt-2">
                  <div class="col-6">
                    <label for="Price" class="form-label">Price</label>
                    <input id="Price" name="listing[price]"  value="<%= listing.price %>"  placeholder="1000" type="number" class="form-control" required>
                   </div>
                   <div class="col-6">
                    <label for="location" class="form-label">Location</label>
                    <input id="location" name="listing[location]"  value="<%= listing.location %>"  type="text" placeholder="Jaipur" class="form-control" required>
                   </div>
               </div>
               <div class="mt-2">
                <label for="country" class="form-label">Country</label>
                <input id="country" name="listing[country]"  value="<%= listing.country %>"  placeholder="India" type="text" class="form-control" required>
               </div>
               <button class="btn mt-4 mb-4 col-2 btn-danger">Submit</button>
           </form>
    </div>
</div>
