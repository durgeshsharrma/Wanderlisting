<% if(successMsg && successMsg.length){ %>
    <div class="row">
        
            <div class="alert col-8 offset-2 alert-dismissible show alert-success" role="alert">
               <%= successMsg %>
               <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
        
    </div>
<% } %>


<% if(errorMsg && errorMsg.length){ %>
    <div class="row">
        
            <div class="alert col-6 offset-2 alert-dismissible show alert-danger" role="alert">
               <%= errorMsg %>
               <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
        
    </div>
<% } %>